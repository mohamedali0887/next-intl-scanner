{
  "locales": ["en", "ar"],
  "sourceDirectory": "./_test",
  "outputDirectory": "./_test/messages",
  "pages": [
    {
      "match": "**/*.{js,jsx,ts,tsx}",
      "ignore": ["**/ignore/**"]
    }
  ],
  "ignore": ["**/node_modules/**", "**/.next/**"],
  "customJSXPattern": [
    {
      "element": "FormattedMessage",
      "attributes": {
        "namespace": "namespace",
        "string": "string",
        "messageKey": "key"
      }
    },
    {
      "element": "FormattedMessage",
      "attributes": {
        "namespace": "namespace",
        "string": "string",
        "messageKey": "messageKey"
      }
    }
  ]
}
